<odoo>
  <data>
    <!-- explicit list view definition -->

    <record model="ir.ui.view" id="schoolmanage.list">
      <field name="name">schoolmanage list</field>
      <field name="model">Nganh.schoolmanage</field>
      <field name="arch" type="xml">
                        <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="code"/>
                                <field name="siso_SV"/>
                                <field name="siso_GV"/>
                                <field name="ten_khoa"/>
                                <field name="ma_khoa"/>
                            </group>
                            <group>
                                <field name="sdt"/>
                                <field name="gmail"/>
                                <field name="ten_lop"/>
                                <field name="ma_lop"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="schoolmanage.list" model="ir.ui.view">
            <field name="name">schoolmanage.list</field>
            <field name="model">Nganh.schoolmanage</field>
            <field name="arch" type="xml">
                <tree string="Khoa" default_order="create_date asc">
                    <field name="name"/>
                    <field name="code"/>
                    <field name="siso_SV"/>
                    <field name="siso_GV"/>
                    <field name="ten_khoa"/>
                    <field name="ma_khoa"/>
                    <field name="sdt"/>
                    <field name="gmail"/>
                    <field name="ten_lop"/>
                    <field name="ma_lop"/>
                </tree>
            </field>
        </record>
        <record id="action_Nganh" model="ir.actions.act_window">
            <field name="name">Nganh</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">Nganh.schoolmanage</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
              <p class="oe_view_content_create">
                Create your first course!
              </p>
            </field>
        </record>

        <menuitem id="Nganh_menu"
                  name="Nganh"
                  action="action_Nganh"
                  sequence="10"/>
    </data>
</odoo>