<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="my_course_form_view" model="ir.ui.view">
            <field name="name">my.course.form.view</field>
            <field name="model">my.course</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <div class="oe_title">
                            <label for="coursecode"/>
                            <h3><field name="coursecode"/></h3>
                        </div>
                        <group>
                            <group>
                                <field name="semester"/>
                                <field name="coursename"/>
                                <field name="credits"/>
                                <field name="coursetype"/>
                                <field name="theoretical"/>
                                <field name="practice"/>
                            </group>
                            <group>
                                <field name="total"/>
                                <field name="starttime"/>
                                <field name="endtime"/>
                                <field name="schedule"/>
                                <field name="room"/>
                                <field name="examday"/>
                                <field name="note"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="my_course_tree_view" model="ir.ui.view">
            <field name="name">my.course.tree.view</field>
            <field name="model">my.course</field>
            <field name="arch" type="xml">
                <tree string="course" default_order="create_date asc">
                    <field name="coursecode"/>
                    <field name="semester"/>
                    <field name="coursename"/>
                    <field name="credits"/>
                    <field name="coursetype"/>
                    <field name="theoretical"/>
                    <field name="practice"/>
                    <field name="total"/>
                    <field name="starttime"/>
                    <field name="endtime"/>
                    <field name="schedule"/>
                    <field name="room"/>
                    <field name="examday"/>
                    <field name="note"/>
                </tree>
            </field>
        </record>
        <record id="my_course_act" model="ir.actions.act_window">
            <field name="name">course</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">my.course</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
              <p class="oe_view_content_create">
                Create your first course!
              </p>
            </field>
        </record>

        <menuitem id="my_course_menu"
                  name="Course"
                  action="my_course_act"
                  sequence="10"/>
    </data>
</odoo>