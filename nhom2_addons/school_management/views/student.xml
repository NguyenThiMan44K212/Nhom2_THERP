<odoo>
    <data>
        <record id="student_search_form_view" model="ir.ui.view">
            <field name="name">student.search.form</field>
            <field name="model">school.student</field>
            <field name="arch" type="xml">
                <search string="Information">
                    <field name="name"/>
                    <field name="code"/>
                    <field name="sdt"/>
                    <field name="gmail"/>
                    <field name="ngay_sinh"/>
                    <field name="cmnd"/>
                    <field name="gioi_tinh"/>
                    <field name="chuyen_nganh"/>
                    <field name="nam_nhap"/>
                    <field name="status"/>
                    <field name="he_dt"/>
                    <field name="so_tc"/>
                </search>
            </field>
        </record>

        <record id="student_tree_view" model="ir.ui.view">
            <field name="name">student.tree.view</field>
            <field name="model">school.student</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="code"/>
                    <field name="sdt"/>
                    <field name="gmail"/>
                    <field name="ngay_sinh"/>
                    <field name="cmnd"/>
                    <field name="gioi_tinh"/>
                    <field name="chuyen_nganh"/>
                </tree>
            </field>
        </record>

        <record id="student_form_view" model="ir.ui.view">
            <field name="name">student.form.view</field>
            <field name="model">school.student</field>
            <field name="arch" type="xml">
                <form string="Create">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="code"/>
                        </group>
                        <notebook>
                            <page string="Basic Information">
                                <group>
                                    <group>
                                        <field name="sdt"/>
                                        <field name="gmail"/>
                                        <field name="ngay_sinh"/>
                                        <field name="dia_chi_thuong_tru"/>
                                        <field name="dia_chi_tam_tru"/>
                                    </group>
                                    <group>
                                        <field name="cmnd"/>
                                        <field name="gioi_tinh"/>
                                        <field name="dan_toc"/>
                                        <field name="ton_giao"/>
                                    </group>
                                </group>
                            </page>
                            <page string="Education Information">
                                <group>
                                    <group>
                                        <field name="nganh_hoc"/>
                                        <field name="chuyen_nganh"/>
                                        <field name="khoa"/>
                                        <field name="lop"/>
                                        <field name="bang_cap"/>
                                        <field name="sinh_nam"/>
                                        <field name="nganh_2"/>
                                        <field name="stk"/>
                                    </group>
                                    <group>
                                        <field name="nam_nhap"/>
                                        <field name="nam_ra"/>
                                        <field name="ten_giao"/>
                                        <field name="status"/>
                                        <field name="he_dt"/>
                                        <field name="so_tc"/>
                                        <field name="notes"/>
                                    </group>
                                </group>
                            </page>
                            <page string="Family Information">
                                <group>
                                    <field name="ten_ba"/>
                                    <field name="nghe_ba"/>
                                    <field name="ten_ma"/>
                                    <field name="nghe_ma"/>
                                    <field name="dia_chi"/>
                                    <field name="lien_he"/>
                                </group>
                            </page>
                            <page string="Other Information">
                                <group>
                                    <field name="xe"/>
                                    <field name="ktx"/>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="action_student" model="ir.actions.act_window">
            <field name="name">Student</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">school.student</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
              <p class="oe_view_content_create">
                Create your first student!
              </p>
            </field>
        </record>
    </data>
</odoo>