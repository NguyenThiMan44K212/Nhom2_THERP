<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="my_ology_form_view" model="ir.ui.view">
            <field name="name">my.ology.form.view</field>
            <field name="model">my.ology</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <div class="oe_title">
                            <h1><field name = "name" readonly ="1"/></h1>
                        </div>
                        <notebook>
                            <page string="Ology Information">
                                <group>
                                    <group>
                                        <field name="Ology"/>
                                        <field name="Target"/>
                                        <field name="training_system"/>
                                    </group>
                                </group>
                            </page>
                             <page string="Class Information">
                                 <group>
                                    <group>
                                        <field name="Class_name"/>
                                        <field name="teacherHroom"/>
                                        <field name="SDTteacher"/>
                                        <field name="Emailteacher"/>
                                        <field name="Class_monitor"/>
                                        <field name="SDTClass_monitor"/>
                                        <field name="EmailClass_monitor"/>
                                    </group>
                                     <group>
                                        <field name="total"/>
                                        <field name="status"/>
                                        <field name="note"/>
                                        <field name="starttime"/>
                                        <field name="endtime"/>
                                        <field name="action"/>
                                    </group>
                                </group>
                             </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="my_ology_tree_view" model="ir.ui.view">
            <field name="name">my.ology.tree.view</field>
            <field name="model">my.ology</field>
            <field name="arch" type="xml">
                <tree string="Ology_Class" default_order="create_date asc">
                    <field name = "name"/>
                    <field name="Ology"/>
                    <field name="Target"/>
                    <field name="training_system"/>
                    <field name="Class_name"/>
                    <field name="teacherHroom"/>
                    <field name="SDTteacher"/>
                    <field name="Emailteacher"/>
                    <field name="Class_monitor"/>
                    <field name="SDTClass_monitor"/>
                    <field name="EmailClass_monitor"/>
                    <field name="total"/>
                    <field name="status"/>
                    <field name="note"/>
                    <field name="starttime"/>
                    <field name="endtime"/>
                    <field name="action"/>
                </tree>
            </field>
        </record>
        <record id="my_ology_act" model="ir.actions.act_window">
            <field name="name">Ology</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">my.ology</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
              <p class="oe_view_content_create">
                Create your first Ology_Class!
              </p>
            </field>
        </record>

        <menuitem id="module_root"
                    name="Ology"
                    sequence="10"/>
        <menuitem id="my_ology_menu"
                  name="Ology_Class"
                  parent = "module_root"
                  action = "my_ology_act"
                  sequence="10"/>
    </data>
</odoo>