<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="my_ology_form_view" model="ir.ui.view">
            <field name="name">my.ology.form.view</field>
            <field name="model">my.ology</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>

                        <div class="oe_title">
                            <label for="Ology_name" string="Ology name" class="oe_edit_only"/>
                            <h1><field name="Ology_name" placeholder="Ology name"/></h1>
                        </div>
                            <group>
                                <group>
                                    <field name="Target"/>
                                    <field name="training_system"/>
                                </group>
                            </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="my_ology_tree_view" model="ir.ui.view">
            <field name="name">my.ology.tree.view</field>
            <field name="model">my.ology</field>
            <field name="arch" type="xml">
                <tree string="Ology_Class" default_order="create_date asc">
                    <field name="Ology_name"/>
                    <field name="Target"/>
                    <field name="training_system"/>
                </tree>
            </field>
        </record>

        <record id="action_ology" model="ir.actions.act_window">
            <field name="name">Ology</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">my.ology</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
              <p class="oe_view_content_create">
                Create your first Ology!
              </p>
            </field>
        </record>

<!--                                  class                                            -->

        <record id="my_class_form_view" model="ir.ui.view">
            <field name="model">my.class</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <div class="oe_title">
                            <label for="Class_name" string="Class name" class="oe_edit_only"/>
                            <h1><field name="Class_name" placeholder="Ology name"/></h1>
                        </div>
                            <group>
                                <group>
                                    <field name="teacherHroom"/>
                                    <field name="SDTteacher"/>
                                    <field name="Emailteacher"/>
                                    <field name="Class_monitor"/>
                                    <field name="SDTClass_monitor"/>
                                    <field name="EmailClass_monitor"/>
                                </group>
                                <group>
                                    <field name="total"/>
                                    <field name="status"/>
                                    <field name="note"/>
                                    <field name="starttime"/>
                                    <field name="endtime"/>
                                    <field name="action"/>
                                </group>
                            </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="my_class_tree_view" model="ir.ui.view">
            <field name="name">my.class.tree.view</field>
            <field name="model">my.class</field>
            <field name="arch" type="xml">
                <tree string="Ology_Class" default_order="create_date asc">
                    <field name="Class_name"/>
                    <field name="teacherHroom"/>
                    <field name="SDTteacher"/>
                    <field name="Emailteacher"/>
                    <field name="Class_monitor"/>
                    <field name="SDTClass_monitor"/>
                    <field name="EmailClass_monitor"/>
                    <field name="total"/>
                    <field name="status"/>
                    <field name="note"/>
                    <field name="starttime"/>
                    <field name="endtime"/>
                    <field name="action"/>
                </tree>
            </field>
        </record>

        <record id="action_Class" model="ir.actions.act_window">
            <field name="name">Class</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">my.class</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
              <p class="oe_view_content_create">
                Create your first Class!
              </p>
            </field>
        </record>


        <menuitem id="module_root"
                  name="Ology"
                  sequence="10"/>

        <menuitem id="my_ology_menu"
                  name="Ology_Class"
                  parent = "module_root"
                  sequence="10"/>

        <menuitem
                 name="Ology"
                 id="Ology"
                 parent="my_ology_menu"
                 action = "action_ology"
                 sequence="10"/>

        <menuitem
                 name="Class"
                 id="Class"
                 parent="my_ology_menu"
                 action = "action_Class"
                 sequence="10"/>

   </data>
</odoo>